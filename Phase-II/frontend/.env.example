# Next.js Environment Variables
NEXT_PUBLIC_API_URL="http://localhost:8000"
NEXT_PUBLIC_ENVIRONMENT="development"
NEXT_PUBLIC_ENABLE_DEBUG="true"

# Better Auth Configuration
BETTER_AUTH_SECRET="your-super-secret-jwt-key-change-this-in-production"
NEXT_PUBLIC_BETTER_AUTH_SECRET="your-super-secret-jwt-key-change-this-in-production"

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS="false"
NEXT_PUBLIC_ENABLE_DEBUG="true"
NEXT_PUBLIC_ENABLE_PERF_METRICS="false"

# External Services (if any)
# NEXT_PUBLIC_SENTRY_DSN=""
# NEXT_PUBLIC_ANALYTICS_ID=""

# Development Configuration
NEXT_PUBLIC_API_TIMEOUT="30000"
NEXT_PUBLIC_MAX_RETRIES="3"
NEXT_PUBLIC_CACHE_TTL="300"

# Security (change in production)
NEXT_PUBLIC_CSP_POLICY="default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline';"
NEXT_PUBLIC_HSTS_MAX_AGE="31536000"
NEXT_PUBLIC_HSTS_INCLUDE_SUBDOMAINS="true"
NEXT_PUBLIC_HSTS_PRELOAD="true"

# Build Configuration
NEXT_PUBLIC_BUILD_ID="${BUILD_ID}"
NEXT_PUBLIC_COMMIT_SHA="${COMMIT_SHA}"
NEXT_PUBLIC_BRANCH_NAME="${BRANCH_NAME}"